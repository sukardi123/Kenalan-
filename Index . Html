<body>
  <div class="chat-container">
    <div class="chat-box" id="chatBox">
      <div class="message bot">Halo! Aku bot interaktif. Apa kabar?</div>
    </div>
    <div class="input-box">
      <input type="text" id="userInput" placeholder="Tulis pesan...">
      <button onclick="sendMessage()">Kirim</button>
    </div>
  </div>

  <script>
    function sendMessage() {
      const input = document.getElementById('userInput');
      const chatBox = document.getElementById('chatBox');
      const userMsg = input.value.trim();
      if (userMsg === "") return;

      // Tambahkan pesan user
      const userDiv = document.createElement('div');
      userDiv.className = 'message user';
      userDiv.innerText = userMsg;
      chatBox.appendChild(userDiv);

      // Respon bot sederhana
      const botDiv = document.createElement('div');
      botDiv.className = 'message bot';
      if (userMsg.toLowerCase().includes("halo")) {
        botDiv.innerText = "Halo juga! Senang bertemu denganmu ðŸ˜ƒ";
      } else if (userMsg.toLowerCase().includes("siapa kamu")) {
        botDiv.innerText = "Aku adalah bot sederhana yang dibuat untuk mengobrol denganmu!";
      } else {
        botDiv.innerText = "Menarik! Ceritakan lebih banyak...";
      }
      chatBox.appendChild(botDiv);

      // Scroll otomatis ke bawah
      chatBox.scrollTop = chatBox.scrollHeight;

      // Kosongkan input
      input.value = "";
    }
  </script>
</body>
</html>
